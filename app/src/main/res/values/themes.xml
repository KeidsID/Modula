<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Modula" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue_700</item>
    <item name="colorPrimaryVariant">@color/blue_700_50Alpha</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/yellow_500</item>
    <item name="colorSecondaryVariant">@color/yellow_500</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="textH1">
    <item name="android:textSize">96sp</item>
    <item name="fontFamily">@font/rubik_bold</item>
  </style>

  <style name="textH4">
    <item name="android:textSize">34sp</item>
    <item name="fontFamily">@font/rubik_bold</item>
  </style>

  <style name="textH5">
    <item name="android:textSize">24sp</item>
    <item name="fontFamily">@font/rubik_bold</item>
  </style>

  <style name="textH6">
    <item name="android:textSize">20sp</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="textSub1">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="textSub2">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="textBody1">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/rubik</item>
  </style>

  <style name="textBody2">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/rubik</item>
  </style>
</resources>